// ======================================================//
// Text utilities
// ======================================================//
$text-white
  color white
  
$text-center
  text-align center


// ======================================================//
// Normal content / p
// ======================================================//
.text
  font-size 1rem
  color $black
  margin-top 0
  margin-bottom 1rem
  font-weight 400
  line-height 1.6
  
  &__light
    @extend .text
    color $blackLight


// ======================================================//
// Titles
// ======================================================//
.title
  margin-bottom 4rem
  font-size 2.25rem
  font-weight 900
  color $black
  
.titleMain
  @extend .title
  margin-top 0
  margin-bottom 0
  font-weight 900
  font-size responsive 2.25rem 3rem
  
  &__white
    @extend .titleMain
    @extend $text-white
  
.subTitle
  font-size 1.25rem
  font-weight 900
  color $black
  
  &__blue
    @extend .subTitle
    color $blue
  


